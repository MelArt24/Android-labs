<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/optionsFragment">

    <fragment
        android:id="@+id/optionsFragment"
        android:name="com.am24.lab2android.OptionsFragment"
        android:label="Options">
        <action
            android:id="@+id/action_options_to_order"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.am24.lab2android.OrderFragment"
        android:label="Order Summary">
        <argument
            android:name="orderText"
            app:argType="string" />
    </fragment>
</navigation>